{
    "hosting": [{
        "public": "dist/PROJECTNAME",
        "headers": [{
            "source": "/**",
            "headers": [{
                "key": "Cache-Control",
                "value": "no-cache, no-store, must-revalidate"
            }]
        }],
        "target": "TARGETNAME",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }]
    }]
  }
  